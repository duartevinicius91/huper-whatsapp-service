{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug API Server",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--inspect"
            ],
            "program": "${workspaceFolder}/api.js",
            "env": {
                "NODE_ENV": "development",
                "DEBUG": "true",
                "LOG_LEVEL": "debug",
                "LOG_TIMESTAMPS": "true"
            },
            "console": "integratedTerminal",
            "restart": true,
            "protocol": "inspector",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug API Server (Production Mode)",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--inspect"
            ],
            "program": "${workspaceFolder}/api.js",
            "env": {
                "NODE_ENV": "production",
                "DEBUG": "false",
                "LOG_LEVEL": "info"
            },
            "console": "integratedTerminal",
            "restart": true,
            "protocol": "inspector",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 9229,
            "restart": true,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}

